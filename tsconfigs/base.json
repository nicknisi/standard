{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,

		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"sourceMap": true,

		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true
	}
}
